<style >
	html, body{
		height: 100%;
		margin: 0%;
		padding: 0%;
	}
	header{
		height: 80px;
		background: #161d24;
	}
	.container{
		margin: 0 auto;
		max-width: 1200px;
		
	}
	.flex-menu{
		display: flex;
		height: 80px;
		width: 60%;
		float: left;
		align-items: center;
		color: #fff5f5;
		font-family: sans-serif;
		text-transform: uppercase;
	}
	.flex-menu li{
		margin-left: 10px;
		list-style: none;
		display: inline-block;
	}
	.flex-menu a{
		font-weight: 600;
		color: #fff5f5;
		text-decoration: none;
	}
	.flex-menu a:hover{
		color: #ffffff;
	}
	.flex-menu img{
		width: 120px;
		
	}
	.menu-rigth{
		float: left;
		width: 40%;
		color: #fff5f5;
		font-family: sans-serif;
	}
	.menu-rigth a{
		text-decoration: none;
		color: #fff5f5;
		margin: 0 6px;
	}
	.btn-download{
		color: #fff;
		background-color: green;
		display: inline-block;
		padding: 6px 12px;
		font-family: sans-serif;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 8px;
		
	}
	.btn-download svg{

		height: 18px;
	}
	.btn-download:hover{
		background-color: rgb(95, 255, 95);

	}
	.baner{
		background: orange;
		height: 360px;
	}
	.baner2{
		position: relative;
		background: purple;
		height: 240px;
	}
	.left-menu{
		background: pink;
		width: 180px;
		height: 360px;
		position: sticky;
		top: 80px; 
		left: 0;
	}
	.baner3{
		background-color: red;
		height: 1000px;
	}
</style>
